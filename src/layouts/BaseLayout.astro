---
import SEO from "../components/SEO.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

export interface Props {
  title?: string;
  description?: string;
  hideFooter?: boolean;
}
const { title, description, hideFooter = false } = Astro.props as Props;
---
<html lang="en" class="min-h-full">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <SEO {title} {description} />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@400;600&family=IBM+Plex+Serif:wght@400;600&family=Inter:wght@400;600;800&display=swap" rel="stylesheet">
  </head>
  <body class="min-h-screen scanlines noise bg-paper text-ink dark:bg-ink dark:text-paper font-sans grid-bg">
    <Header />
    <main class="mx-auto max-w-3xl px-4 py-10">
      <slot />
    </main>
    {hideFooter ? null : <Footer />}
  </body>
  
</html>
